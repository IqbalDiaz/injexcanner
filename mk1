    <section id="scan">
        <h2>Scan a Website</h2>
        <input type="text" id="url" placeholder="Enter website URL">
        <button onclick="scanWebsite()">Scan</button>
        <p id="result"></p>
    </section>
    
    <section id="contact">
        <h2>Contact Us</h2>
        <p>Email: support@injexcanner.com</p>
    </section>
    
    <script>
        function scanWebsite() {
            let url = document.getElementById('url').value;
            if (url) {
                document.getElementById('result').innerText = "Scanning " + url + "...";
                setTimeout(() => { document.getElementById('result').innerText = "Scan Complete! No vulnerabilities found."; }, 2000);
            } else {
                document.getElementById('result').innerText = "Please enter a valid URL.";
            }
        }
    </script>
